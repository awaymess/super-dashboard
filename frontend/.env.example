# Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# OAuth Providers (optional) - TODO: Add your OAuth client credentials
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Feature Toggles
NEXT_PUBLIC_FEATURE_BETTING=true
NEXT_PUBLIC_FEATURE_STOCKS=true
NEXT_PUBLIC_FEATURE_PAPER_TRADING=true
NEXT_PUBLIC_FEATURE_NLP=false
NEXT_PUBLIC_FEATURE_ALERTS=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=
